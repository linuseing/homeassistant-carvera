{
  "name": "Homeassistant Carvera Addon",
  "version": "1.0.10",
  "slug": "carvera_addon",
  "description": "A Home Assistant add-on for the Makera Carvera/Carvera Air.",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
